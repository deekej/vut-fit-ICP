############################################################
# Default rule for creating all required files:
############################################################

all:
	@$(MAKE) -C src/server
	@$(MAKE) -C src/client

############################################################
# Other useful stuff:
############################################################

# Rule to mark "false-positive" targets in project folder.
.PHONY: run doxygen pack stats stats-display clean clean-all

run:

doxygen:

pack:

stats:
	@echo "make[1]: Generating git statistics"
	@gitstats . stats/
	@sensible-browser 'stats/index.html'

stats-display:
	@sensible-browser 'stats/index.html'

# Remove object files generated during compiling.
clean:
	@$(MAKE) clean -C src/server
	@$(MAKE) clean -C src/client

# Remove all files generated by doxygen:
clean-doc:
	@echo "make[1]: Removing doxygen documentation"
	@rm -rf doc/*

# Remove all generated files:
clean-all: clean-doc
	@$(MAKE) clean-all -C src/server
	@$(MAKE) clean-all -C src/client
